<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation = "vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D3D0D0"
        android:gravity="right"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="140sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal"
        android:layout_weight="1"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="CE"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="C"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="BS"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="/"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal"
        android:layout_weight="1"
        android:layout_margin="0dp">

        <Button
            android:id="@+id/btn7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:backgroundTint="#E6E4E4"
            android:text="7"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>
        <Button
            android:id="@+id/btn8"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E6E4E4"
            android:text="8"
            android:layout_marginRight="2dp"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>
        <Button
            android:id="@+id/btn9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E6E4E4"
            android:text="9"
            android:layout_marginRight="2dp"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="x"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E6E4E4"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:text="4"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>
        <Button
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E6E4E4"
            android:text="5"
            android:textColor="#181616"
            android:layout_marginRight="2dp"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>
        <Button
            android:id="@+id/btn6"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E6E4E4"
            android:text="6"
            android:textColor="#181616"
            android:textSize="35sp"
            android:layout_marginRight="2dp"
            app:cornerRadius="0px">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="-"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal"
        android:layout_weight="1">
        <Button
            android:id="@+id/btn1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:backgroundTint="#E6E4E4"
            android:text="1"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>
        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E6E4E4"
            android:text="2"
            android:layout_marginRight="2dp"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>
        <Button
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#E6E4E4"
            android:text="3"
            android:layout_marginRight="2dp"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="+"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation = "horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnNeg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="+/-"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="2dp"
            android:backgroundTint="#E6E4E4"
            android:text="0"
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="."
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:backgroundTint="#D3D0D0"
            android:text="="
            android:textColor="#181616"
            android:textSize="35sp"
            app:cornerRadius="0px"></Button>
    </LinearLayout>
        
</LinearLayout>